<section id="news" class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="section-title text-center mb-5">
                    Kampaniya və xəbərlər
                </div>

                <div class="col-12 col-md-12 col-sm-12">
                    <div class="row justify-content-center">
                        @foreach (var item in Model.SIMA_NEWS_LIST)
                        {
                            <div class="card col-12 col-sm-4 col-md-3 mb-5  shadow" style="height:410px">
                                <div class="card-img-top home-news__image">
                                    <img src=@string.Concat(item.IMG) class="img-fluid mt-2" />
                                </div>
                                <div class="card-body overflow-hidden">
                                    <div>
                                        <div class="card_news__title">
                                            <h5>
                                                @item.NEWSTITLE
                                            </h5>
                                        </div>
                                        <div class="card-text">
                                            <h6>
                                                @item.NEWSCONTENT
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="row align-center ml-1 mt-1 mb-1">
                                    <div class="col-6">
                                        <a class="home-news__details" onclick="location.href='@Url.Action("News", "Main", new { news_id = item.ID })'">Daha cox </a>
                                        <img src="~/img/arrow-right-green.a49dd71b.svg" alt="arrow" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="faq" class="bg-transparent">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <p class="text-faq faq_title mt-5 mb-0" style="font-size:30px">
                            Sualınız var?
                        </p>
                        <p class="text-faq faq_description mb-4">
                            Ən çox verilən sualların cavabı üçün hazır FAQ bölməsinə baxın
                        </p>
                        <a class="details">
                            <img src="~/img/info.17539269.svg" />
                            <span class="text-center align-middle text-success" onclick="location.href='@Url.Action("FAQ", "Main")'">Daha çox</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-6 mt-5 mb-0">
                        @foreach (var item in Model.SIMA_FAQ_LIST)
                        {
                            if (count < 4)
                            {
                                <div data-target="#@string.Concat(item.ISARCHIVED,(int)item.ID) " data-toggle="collapse" role="button">
                                    @item.QUESTION
                                    <hr />
                                </div>
                                <div id=@string.Concat(item.ISARCHIVED,(int)item.ID) class="collapse in mb-3" role="button">
                                    @item.ANSWER
                                </div>
                                count++;
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



